<%= form_for @link do |f| %>
	<%= f.label :author %>
	<%= f.text_field :author %>

	<%= f.label :link_url %>
	<%= f.text_field :link_url %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.submit %>
<% end %>

<% if @link.errors.any? %>
	<b>Errors:</b>
	<ul>
	<% @link.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>