<p>Hello <%= current_user.email %>, <%= link_to 'Sign Out', destroy_user_session_path, :method => "delete" %></p>
<h1>Find Animations</h1>

<form action="<%= animations_path %>" method="get">
	<label>Search: <input name="query"></label>
	<button>Submit</button>
</form>

<% @results.each do |result| %>
	<div><%= image_tag result['images']['fixed_width']['url'] %></div>
	<%= form_for(@favorite) do |f| %>
		<%= f.hidden :gif_id %>
		<%= f.hidden :user_id %>
		<%= f.submit %>
	<% end %>
<% end %>