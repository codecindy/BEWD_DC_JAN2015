<p>
	<%= link_to "Movies", movies_path %> /
	<%= @movie.title %>
</p>

<h1><%= @movie.title %></h1>
<ul>
	<li>Release Year: <%= @movie.year %></li>
	<li><%= image_tag @movie.poster_url%></li>
</ul>

<ul>
<% @trailers.each do |trailer| %>
  <li><%= link_to trailer.title, movie_trailer_path(@movie, trailer) %></li>
<% end %>
</ul>

<p><%= link_to "Add a trailer", new_movie_trailer_path(@movie) %></p>