<p><%= link_to "Movies", movies_path %> / <%= @movie.movie_title %></p>

<h1><%= @movie.movie_title %></h1>
<img src="<%= @movie.poster_url %>">

<ul>
<% @trailers.each do |trailer| %>
	<li><%= link_to trailer.trailer_title, movie_trailer_path(@movie, trailer) %></li>
 <% end %>
</ul>

<%= form_for @movie, :method => :delete do |f| %>
  <%= f.submit 'Destroy' %>
<% end %>

<%= link_to "Add another movie", new_movie_path %>

<%= link_to "Back to All Movies", movies_path %>
